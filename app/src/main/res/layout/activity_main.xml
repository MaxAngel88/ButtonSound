<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.MainActivity" android:padding="10px">

    <Button
            android:text="Capo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="77dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:id="@+id/button_Capo"
            android:layout_marginBottom="77dp"
            android:layout_marginLeft="77dp"/>
    <Button
            android:text="Dr. Nappi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignBottom="@+id/button_Capo"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="77dp"
            android:id="@+id/button_Nappi"
            android:layout_marginRight="77dp"/>

    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/box_Enter_your_message"
            android:ems="10"
            android:layout_alignParentTop="true"
            android:id="@+id/et_userMessage"
            android:layout_marginTop="73dp"/>
    <Button
            android:text="@string/msg_Send_to_the_next_Activity"
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="23dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:id="@+id/button_sendMsgNextAct"
            android:layout_marginTop="127dp"
            android:layout_marginLeft="23dp"/>
    <Button
            android:text="@string/btn_Share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_alignParentRight="true"
            android:layout_alignBottom="@+id/button_sendMsgNextAct" android:layout_alignParentEnd="true"
            android:layout_marginEnd="25dp" android:id="@+id/button_share" android:layout_marginRight="25dp"/>
    <Button
            android:text="Recycler View"
            android:layout_width="166dp"
            android:layout_height="wrap_content"
            android:id="@+id/button_recycler_view"
            android:layout_centerInParent="true"/>
    <Button
            android:text="@string/btn_gridGallery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true" android:id="@+id/button_gridGallery"
            android:layout_marginBottom="157dp"/>

</RelativeLayout>